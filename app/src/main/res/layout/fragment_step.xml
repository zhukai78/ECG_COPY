<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10.0dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/step_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="30.0dip"
                android:text="@string/l_step"
                android:textColor="@color/gray_text_cl"
                android:textSize="20.0sp" />

            <TextView
                android:id="@+id/step_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="60.0dip"
                android:text="0"
                android:textSize="50.0sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="130.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/l_step_target"
                    android:textColor="@color/gray_text_cl"
                    android:textSize="12.5sp" />

                <TextView
                    android:id="@+id/step_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/l_none"
                    android:textColor="@color/gray_text_cl"
                    android:textSize="12.5sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/l_today"
                    android:textSize="22.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/line1"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginRight="20.0dip"
                    android:text="@string/l_step_taday_total"
                    android:textSize="18.0sp" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="2.0dip"
                    android:layout_height="22.0sp"
                    android:layout_alignBottom="@id/step_taday_total"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/stroke_cl" />

                <TextView
                    android:id="@+id/step_taday_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/line1"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="3.0dip"
                    android:text="0"
                    android:textColor="@color/brown1" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="6.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@color/stroke_cl" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/line2"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginRight="20.0dip"
                    android:text="@string/l_calories"
                    android:textSize="18.0sp" />

                <View
                    android:id="@+id/line2"
                    android:layout_width="2.0dip"
                    android:layout_height="22.0sp"
                    android:layout_alignBottom="@id/step_calories"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/stroke_cl" />

                <TextView
                    android:id="@+id/step_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/line2"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="3.0dip"
                    android:text="0"
                    android:textColor="@color/brown1" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="6.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@color/stroke_cl" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/line3"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginRight="20.0dip"
                    android:text="@string/l_step_complete"
                    android:textSize="18.0sp" />

                <View
                    android:id="@+id/line3"
                    android:layout_width="2.0dip"
                    android:layout_height="22.0sp"
                    android:layout_alignBottom="@id/step_complete"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/stroke_cl" />

                <TextView
                    android:id="@+id/step_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/line3"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="3.0dip"
                    android:text="0"
                    android:textColor="@color/brown1" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/step_view_history"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:background="@drawable/rec_stroke_bg_t"
            android:padding="10.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/l_step_rec" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rec_stroke_bg_t"
            android:padding="10.0dip"
            android:visibility="gone">

            <TextView
                android:id="@+id/step_view_curve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/l_step_curve" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/step_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10.0dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/step_start"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginBottom="20.0dip"
            android:background="@drawable/rec_item_sel">

            <TextView
                android:id="@+id/step_start_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/l_step_start"
                android:textSize="20.0sp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>